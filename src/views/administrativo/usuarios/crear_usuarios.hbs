<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Usuario</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Estilos generales */
        .form-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }
        .form-container h2 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }
        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
            position: relative;
        }
        .form-group label {
            color: #555;
            font-weight: bold;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
        }
        .form-group input, .form-group select {
            padding: 10px;
            padding-left: 35px;
            font-size: 16px;
            border-radius: 4px;
            border: 1px solid #ccc;
            width: 100%;
            transition: all 0.3s;
        }
        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: #1E99D3;
        }
        .form-group .icon {
            position: absolute;
            top: 38px;
            left: 10px;
            color: #aaa;
            font-size: 18px;
        }
        button[type="submit"] {
            background-color: #1E99D3;
            color: #fff;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 100%;
        }
        button[type="submit"]:hover {
            background-color: #7CB646;
        }
        .form-group select option {
            color: #333;
        }
        /* Estilo de íconos */
        .icon {
            color: #666;
        }
        /* Ocultar el campo de cargo inicialmente */
        #cargo-group {
            display: none;
        }
    </style>
    <script>
        function toggleCargoField() {
            const roleSelect = document.getElementById("role");
            const cargoGroup = document.getElementById("cargo-group");
            // Mostrar el campo de cargo si el rol es "admin"
            cargoGroup.style.display = roleSelect.value === "admin" ? "block" : "none";
        }
    </script>
</head>
<body>
    <div class="form-container">
        <h2>Agregar Usuario</h2>
<form action="/guardar_usuario" method="POST" autocomplete="off">
            <div class="form-group">
                <label for="nombre"><i class="fas fa-user icon"></i> Nombre:</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="user_email"><i class="fas fa-envelope icon"></i> Email:</label>
                <input type="email" id="user_email" name="user_email" required autocomplete="nope">
            </div>
            <div class="form-group">
                <label for="user_password"><i class="fas fa-lock icon"></i> Contraseña:</label>
                <input type="password" id="user_password" name="user_password" required autocomplete="new-password">
            </div>
            <div class="form-group">
                <label for="role"><i class="fas fa-user-tag icon"></i> Rol:</label>
                <select id="role" name="role" required onchange="toggleCargoField()">
                    <option value="">Selecciona un rol</option>
                    <option value="admin">Administrador</option>
                    <option value="residentes">Residente</option>
                </select>
            </div>
            <!-- Campo de cargo con casillas de verificación (se mostrará solo si el rol es admin) -->
            <div class="form-group" id="cargo-group">
                <label><i class="fas fa-briefcase icon"></i> Cargo:</label>
                <label><input type="checkbox" name="cargo[]" value="Gerente"> Gerente</label>
                <label><input type="checkbox" name="cargo[]" value="administracion_operativa"> Administración Operativa</label>
                <label><input type="checkbox" name="cargo[]" value="contabilidad"> Contabilidad</label>
                <label><input type="checkbox" name="cargo[]" value="operativo"> Operativo</label>
            </div>
            <button type="submit"><i class="fas fa-user-plus"></i> Agregar Usuario</button>
        </form>
    </div>
</body>
</html>
