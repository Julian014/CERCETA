<form action="/buscarPagos" method="POST">
    <div>
        <label for="id">ID de Pago:</label>
        <input type="text" name="id" id="id">
    </div>
    <div>
        <label for="apartamento_id">ID del Apartamento:</label>
        <input type="text" name="apartamento_id" id="apartamento_id">
    </div>
    <div>
        <label for="fecha_inicio">Fecha Inicio:</label>
        <input type="date" name="fecha_inicio" id="fecha_inicio">
    </div>
    <div>
        <label for="fecha_fin">Fecha Fin:</label>
        <input type="date" name="fecha_fin" id="fecha_fin">
    </div>
    <div>
        <label for="nombre_edificio">Nombre del Edificio:</label>
        <input type="text" name="nombre_edificio" id="nombre_edificio">
    </div>
    <div>
        <label for="numero_apartamento">Número de Apartamento:</label>
        <input type="text" name="numero_apartamento" id="numero_apartamento">
    </div>
    <button type="submit">Buscar Pagos</button>
</form>

{{#if pagos}}
    <h2>Resultados de la Búsqueda</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Apartamento ID</th>
                <th>Fecha Pago</th>
                <th>Valor Pago</th>
                <th>Estado</th>
                <th>Nombre Edificio</th>
                <th>Número Apartamento</th>
            </tr>
        </thead>
        <tbody>
            {{#each pagos}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.apartamento_id}}</td>
                    <td>{{this.fecha_pago}}</td>
                    <td>{{this.valor_pago}}</td>
                    <td>{{this.estado}}</td>
                    <td>{{this.nombre_edificio}}</td>
                    <td>{{this.numero_apartamento}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No se encontraron pagos con los criterios especificados.</p>
{{/if}}
