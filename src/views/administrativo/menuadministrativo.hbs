        right: -10px;
        background-color: var(--accent-color);
        color: white;
        padding: 5px 8px;
        border-radius: 50%;
        font-size: 12px;
    }

    .dashboard-content {
        display: flex;
        flex-direction: column;
    }

    .card {
        background-color: var(--bg-dark);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .stat {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .stat-icon {
        font-size: 40px;
        color: var(--accent-color);
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 20px;
    }

    .chart-container {
        padding: 20px;
        background-color: var(--bg-dark);
        border-radius: 10px;
    }

    .profile-menu {
        position: relative;
        display: inline-block;
    }

    .dropdown-menu {
        position: absolute;
        top: 40px;
        right: 0;
        background-color: var(--bg-dark);
        border-radius: 10px;
        padding: 10px;
        display: none;
        flex-direction: column;
        width: 150px;
        z-index: 1;
    }

    .dropdown-menu a {
        padding: 10px;
        text-decoration: none;
        color: var(--text-light);
        display: block;
    }

    .dropdown-menu a:hover {
        background-color: var(--primary-color);
        border-radius: 5px;
    }

    .hidden {
        display: none;
    }

    .show {
        display: flex;
    }

    .submenu {
        list-style: none;
        padding-left: 0;
        margin-top: 0;
        display: none;
        max-height: 0;
        overflow: hidden;
        position: absolute;
        top: 100%;
        left: 0;
        width: 200px;
        background-color: white;
        border-radius: 5px;
        z-index: 1000;
        transition: max-height 0.3s ease-out;
    }

    .menu-item {
        display: block;
        margin-bottom: 10px;
        position: relative;
    }

    .submenu.show {
        display: block;
        max-height: 500px;
        transition: max-height 0.3s ease-in;
    }

    .submenu li {
        background-color: white;
        padding: 10px;
        cursor: pointer;
        color: black;
            border-bottom: 1px solid black; /* División negra entre items del submenu */

    }

    .submenu li:hover {
        background-color: var(--primary-color);
        color: white;
        border-radius: 5px;
    }

    .menu-item.active {
        background-color: #4b6b96;
        color: white;
        border-radius: 10px;
    }

    .submenu li.active {
        background-color: #4b6b96;
        color: white;
        border-radius: 5px;
    }
    A{
