<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Chequeo - Informe de Gestión</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .header img {
            width: 200px;
            margin-bottom: 10px;
        }
        h2 {
            color: #1E99D3; /* Updated to blue from the image */
            font-size: 24px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .info-section {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
        }
        .info-section label {
            font-weight: bold;
            color: #333;
        }
        .info-section input[type="text"],
        .info-section input[type="date"],
        .info-section select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ccc;
            margin: 20px 0;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: center;
            font-size: 14px;
        }
        th {
            background-color: #1E99D3; /* Updated to blue from the image */
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
        }
        td input[type="radio"] {
            margin: 0 5px;
        }
        td textarea {
            width: 100%;
            height: 50px;
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 12px;
            resize: vertical;
        }
        td[colspan="5"] {
            background-color: #C92458; /* Updated to red-pink from the image */
            color: #FFFFFF;
            font-weight: bold;
            font-size: 16px;
        }
        .submit-btn {
            display: block;
            width: 50%;
            margin: 20px auto;
            background-color: #7CB646; /* Updated to green from the image */
            color: #fff;
            font-weight: bold;
            padding: 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }
        .submit-btn:hover {
            background-color: #5E8D34; /* Darker shade of green */
        }
        @media (max-width: 768px) {
            .info-section {
                flex-direction: column;
                align-items: center;
            }
            .submit-btn {
                width: 80%;
            }
            th, td {
                font-size: 12px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>

<div class="container">
    <div class="header">
        <img src="imagenes/pixelcut-export__1_-removebg-preview.png" alt="Logo">
    </div>
<form id="informeForm" enctype="multipart/form-data">

    <div class="info-section">
        <div>
            <label for="fecha_informe">Fecha del Informe:</label>
            <input type="date" id="fecha_informe" name="fecha_informe" required>
        </div>
        <div>
            <label for="realizado_por">Realizado por:</label>
            <input type="text" id="realizado_por" name="realizado_por" placeholder="Nombre del responsable" required>
        </div>
        <div>
            <label for="edificio"> Edificio:</label>
            <select id="edificio" name="edificio">
                {{#each edificios}}
                    <option value="{{this.id}}">{{this.nombre}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <table>
        <tr>
            <th>Item No.</th>
            <th>Actividad</th>
            <th>SI</th>
            <th>NO</th>
            <th>Observación</th>
        </tr>
<tr><td colspan="5">BITACORA DE MANTENIMIENTO DE EQUIPOS</td></tr>
<tr><td>1.1</td><td>Transformador de Energía</td>
    <td><input type="radio" name="transformador" value="SI"></td>
    <td><input type="radio" name="transformador" value="NO"></td>
    <td><textarea name="transformador_obs">Todas las novedades que presente cada equipo</textarea></td>
</tr>
<tr><td>1.2</td><td>Planta Eléctrica</td>
    <td><input type="radio" name="planta_electrica" value="SI"></td>
    <td><input type="radio" name="planta_electrica" value="NO"></td>
    <td><textarea name="planta_electrica_obs"></textarea></td>
</tr>
<tr><td>1.3</td><td>Motobomba Piscina</td>
    <td><input type="radio" name="motobomba_piscina" value="SI"></td>
    <td><input type="radio" name="motobomba_piscina" value="NO"></td>
    <td><textarea name="motobomba_piscina_obs"></textarea></td>
</tr>
<tr><td>1.4</td><td>Bombas Sumergibles</td>
    <td><input type="radio" name="bombas_sumergibles" value="SI"></td>
    <td><input type="radio" name="bombas_sumergibles" value="NO"></td>
    <td><textarea name="bombas_sumergibles_obs"></textarea></td>
</tr>
<tr><td>1.5</td><td>Tanque de Reserva</td>
    <td><input type="radio" name="tanque_reserva" value="SI"></td>
    <td><input type="radio" name="tanque_reserva" value="NO"></td>
    <td><textarea name="tanque_reserva_obs"></textarea></td>
</tr>
<tr><td>1.6</td><td>Equipo Gym</td>
    <td><input type="radio" name="equipo_gym" value="SI"></td>
    <td><input type="radio" name="equipo_gym" value="NO"></td>
    <td><textarea name="equipo_gym_obs">Razón por la cual no se hizo mantenimiento</textarea></td>
</tr>
<tr><td>1.7</td><td>Sauna</td>
    <td><input type="radio" name="sauna" value="SI"></td>
    <td><input type="radio" name="sauna" value="NO"></td>
    <td><textarea name="sauna_obs"></textarea></td>
</tr>
<tr><td>1.8</td><td>Turco</td>
    <td><input type="radio" name="turco" value="SI"></td>
    <td><input type="radio" name="turco" value="NO"></td>
    <td><textarea name="turco_obs"></textarea></td>
</tr>
<tr><td>1.9</td><td>Piscina</td>
    <td><input type="radio" name="piscina" value="SI"></td>
    <td><input type="radio" name="piscina" value="NO"></td>
    <td><textarea name="piscina_obs"></textarea></td>
</tr>
<tr><td>1.10</td><td>Cancha de Tenis</td>
    <td><input type="radio" name="cancha_tenis" value="SI"></td>
    <td><input type="radio" name="cancha_tenis" value="NO"></td>
    <td><textarea name="cancha_tenis_obs"></textarea></td>
</tr>
<tr><td>1.11</td><td>Juegos Infantiles</td>
    <td><input type="radio" name="juegos_infantiles" value="SI"></td>
    <td><input type="radio" name="juegos_infantiles" value="NO"></td>
    <td><textarea name="juegos_infantiles_obs"></textarea></td>
</tr>
<tr><td>1.12</td><td>Salón Social</td>
    <td><input type="radio" name="salon_social" value="SI"></td>
    <td><input type="radio" name="salon_social" value="NO"></td>
    <td><textarea name="salon_social_obs"></textarea></td>
</tr>
<tr><td>1.13</td><td>Otros</td>
    <td><input type="radio" name="otros" value="SI"></td>
    <td><input type="radio" name="otros" value="NO"></td>
    <td><textarea name="otros_obs"></textarea></td>
</tr>

    </table>

   <div>
        <label for="imagen_antes">Imagen Antes:</label>
        <input type="file" id="imagen_antes" name="imagen_antes" accept="image/*" required>
    </div>
    <div>
        <label for="imagen_durante">Imagen Durante:</label>
        <input type="file" id="imagen_durante" name="imagen_durante" accept="image/*" required>
    </div>
    <div>
        <label for="imagen_despues">Imagen Después:</label>
        <input type="file" id="imagen_despues" name="imagen_despues" accept="image/*" required>
    </div>

    <input type="button" value="Generar Informe" class="submit-btn" onclick="guardarInforme()">
    <div id="successMessage" class="success-message" style="display: none;">Guardado exitoso</div>
    
    
    </div>

</body>
<script>
async function guardarInforme() {
    const form = document.getElementById('informeForm');
    const formData = new FormData(form);

    try {
        const response = await fetch('/guardar_informe', {
            method: 'POST',
            body: formData
        });

        if (response.ok) {
            document.getElementById('successMessage').style.display = 'block';
            setTimeout(() => {
                document.getElementById('successMessage').style.display = 'none';
                location.reload(); // Recargar la página después de mostrar el mensaje
            }, 3000);
        } else {
            alert("Hubo un problema al guardar el informe.");
        }
    } catch (error) {
        console.error("Error al guardar:", error);
        alert("Error en la conexión al servidor.");
    }
}


</script>
</html>
