<script>
async function guardarInforme() {
    const form = document.getElementById('informeForm');
    const formData = new FormData(form);
    
    // Mostrar indicador de carga
    document.getElementById('loadingIndicator').style.display = 'block';
    const submitButton = document.querySelector('.submit-btn');
    submitButton.disabled = true; // Deshabilitar botón mientras se procesa

    try {
        // Lógica para capturar la imagen y enviar el formulario
        const canvas = await html2canvas(document.getElementById("captura"), { 
            scale: 3, 
            backgroundColor: "#ffffff" 
        });
        const imageBlob = await new Promise((resolve) => canvas.toBlob(resolve, "image/png", 1.0));

        // Verifica si se capturó la imagen correctamente
        if (!imageBlob) {
            throw new Error("Error al capturar la imagen.");
        }

        formData.append("bitacoraPng", imageBlob, "bitacora.png");

        const response = await fetch('/guardar_informe', {
            method: 'POST',
            body: formData
        });

        if (response.ok) {
            document.getElementById('successMessage').style.display = 'block';
            setTimeout(() => {
                document.getElementById('successMessage').style.display = 'none';
                window.location.reload(); // Recargar la página
            }, 3000);
        } else {
            const errorMessage = await response.text();
            alert(`Hubo un problema al guardar el informe: ${errorMessage}`);
        }
    } catch (error) {
        console.error("Error al guardar:", error.message);
        alert("Ocurrió un error al procesar la solicitud. Por favor, inténtalo de nuevo.");
    } finally {
        // Ocultar indicador de carga
        document.getElementById('loadingIndicator').style.display = 'none';
        submitButton.disabled = false; // Rehabilitar el botón
    }
}
</script>